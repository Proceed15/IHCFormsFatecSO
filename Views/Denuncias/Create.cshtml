@model IHCFormsFatecSO.Models.Denuncia

@{
    var action = ViewContext.RouteData.Values["Action"].ToString().ToLower();

    if (action == "create")
    {
        ViewData["Title"] = "Adicionar Denúncia";
        <h1>Adicionar</h1>
    }
    else
    {
        ViewData["Title"] = "Editar Denúncia";
        <h1>Editar</h1>
    }

    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h4>Denúncia</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm(null, "Denuncias", FormMethod.Post, new { @class = "needs-validation", novalidate = "true" }))
        {
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Denuciante" class="control-label"></label>
                        <input asp-for="Denuciante" class="form-control" />
                        <span asp-validation-for="Denuciante" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Telefone" class="control-label"></label>
                        <input asp-for="Telefone" class="form-control" />
                        <span asp-validation-for="Telefone" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Cnpj" class="control-label"></label>
                        <input asp-for="Cnpj" class="form-control" />
                        <span asp-validation-for="Cnpj" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="form-group">
                        <label asp-for="RazaoSocial" class="control-label"></label>
                        <input asp-for="RazaoSocial" class="form-control" />
                        <span asp-validation-for="RazaoSocial" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Logradouro" class="control-label"></label>
                        <input asp-for="Logradouro" class="form-control" />
                        <span asp-validation-for="Logradouro" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-1">
                    <div class="form-group">
                        <label asp-for="Numero" class="control-label"></label>
                        <input asp-for="Numero" class="form-control" />
                        <span asp-validation-for="Numero" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-5">
                    <div class="form-group">
                        <label asp-for="Bairro" class="control-label"></label>
                        <input asp-for="Bairro" class="form-control" />
                        <span asp-validation-for="Bairro" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-5">
                    <div class="form-group">
                        <label asp-for="Cidade" class="control-label"></label>
                        <input asp-for="Cidade" class="form-control" />
                        <span asp-validation-for="Cidade" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label asp-for="UF" class="control-label"></label>
                        <input asp-for="UF" class="form-control" />
                        <span asp-validation-for="UF" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-5">
                    <div class="form-group">
                        <label asp-for="Pais" class="control-label"></label>
                        <input asp-for="Pais" class="form-control" />
                        <span asp-validation-for="Pais" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="CEP" class="control-label"></label>
                        <input asp-for="CEP" class="form-control" onblur="SearchZipCode()" />
                        <span asp-validation-for="CEP" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="Conteudo" class="control-label"></label>
                        @Html.TextAreaFor(model => model.Conteudo, new { @class = "form-control" })
                        <span asp-validation-for="Conteudo" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row mt-2">
                <div class="form-group">
                    <input type="submit" value="Salvar" class="btn btn-primary" />
                </div>
            </div>
        }
    </div>
</div>

<div class="row mt-2">
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ImaskScriptsPartial");
    }
    @{
        await Html.RenderPartialAsync("_ImaskDenunciaPartial");
    }
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    @{
        await Html.RenderPartialAsync("_CEPpartial");
    }
}
